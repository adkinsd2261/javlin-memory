entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Start MemoryOS Clean"

[[workflows.workflow]]
name = "Start MemoryOS API"
author = 44033680
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Check Document Changes"
author = 44033680
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python doc_watcher.py"

[[workflows.workflow]]
name = "Start MemoryOS API (Safe)"

externalPort = 80

[[ports]]
localPort = 81
externalPort = 3001

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Start MemoryOS API (Safe)"

[[workflows.workflow]]
name = "Start MemoryOS API"
